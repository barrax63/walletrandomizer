# Example .env file for Docker Compose
# Copy this file to .env and configure your settings

# =============================================================================
# BALANCE API CONFIGURATION
# =============================================================================
# Balance API to use: "fulcrum" or "blockchain"
# - fulcrum: Use local Fulcrum Electrum server (faster, requires setup)
# - blockchain: Use Blockchain.com public API (slower, no setup required)
# Default: blockchain
BALANCE_API=blockchain

# =============================================================================
# FULCRUM SERVER CONFIGURATION (if BALANCE_API=fulcrum)
# =============================================================================
# Fulcrum server address in format host:port
# Example: FULCRUM_SERVER=192.168.1.100:50001
FULCRUM_SERVER=127.0.0.1:50001

# Alternative: Separate host and port
FULCRUM_HOST=127.0.0.1
FULCRUM_PORT=50001

# =============================================================================
# BLOCKCHAIN.COM API CONFIGURATION (if BALANCE_API=blockchain)
# =============================================================================
# Blockchain.com API base URL
# Default: https://blockchain.info
BLOCKCHAIN_API_URL=https://blockchain.info

# =============================================================================
# WALLET GENERATION CONFIGURATION
# =============================================================================
# Number of wallets to generate
# Use -1 for infinite wallet generation (continuous mode)
# Default: -1 (infinite)
NUM_WALLETS=-1

# Number of addresses to derive per wallet
# Default: 10
NUM_ADDRESSES=10

# Comma-separated BIP derivation types
# Options: bip44, bip49, bip84, bip86
# Default: bip84
NETWORK=bip84

# Mnemonic word count (12 or 24)
# Default: 12
WORD_COUNT=12

# Mnemonic language
# Options: english, french, italian, spanish, korean, chinese_simplified, chinese_traditional
# Default: english
LANGUAGE=english

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
# Output directory for wallet JSON files (inside container)
# Default: /data
OUTPUT_PATH=/data

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================
# Web server host (usually 0.0.0.0 to accept connections from any interface)
WEB_HOST=0.0.0.0

# Web server port
WEB_PORT=5000

# Number of uvicorn worker processes
WEB_WORKERS=4

# Request timeout in seconds
WEB_TIMEOUT=120

# Port where nginx exposes the service to
NGINX_PORT=4099
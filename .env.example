# Example .env file for Docker Compose
# Copy this file to .env and configure your settings

# =============================================================================
# MODE CONFIGURATION
# =============================================================================
# Run mode: "web" for web interface, "cli" for command-line
# Default: cli (but docker-compose.yml uses web by default)
MODE=web

# =============================================================================
# FULCRUM SERVER CONFIGURATION (REQUIRED)
# =============================================================================
# Fulcrum server address in format host:port
# Example: FULCRUM_SERVER=192.168.1.100:50001
FULCRUM_SERVER=127.0.0.1:50001

# Alternative: Separate host and port (used by web mode)
FULCRUM_HOST=127.0.0.1
FULCRUM_PORT=50001

# =============================================================================
# WALLET GENERATION DEFAULTS (used by both web and CLI)
# =============================================================================
# Number of wallets to generate (CLI mode only, web UI has its own controls)
# Use -1 for infinite wallet generation (continuous mode) in CLI mode
# Default: 10 (web mode defaults to 1)
NUM_WALLETS=1

# Number of addresses to derive per wallet
# Default: 5
NUM_ADDRESSES=5

# Comma-separated BIP derivation types
# Options: bip44, bip49, bip84, bip86
# Default: bip84
NETWORK=bip84

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
# Output directory for wallet JSON files (inside container)
# Default: /data
OUTPUT_PATH=/data

# Output format
# Default: json
FORMAT=json

# =============================================================================
# WEB SERVER CONFIGURATION (web mode only)
# =============================================================================
# Web server host (usually 0.0.0.0 to accept connections from any interface)
WEB_HOST=0.0.0.0

# Web server port
WEB_PORT=5000

# Number of gunicorn worker processes
WEB_WORKERS=4

# Request timeout in seconds
WEB_TIMEOUT=120
